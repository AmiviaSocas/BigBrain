from NeuroneSensoriel import NeuroneSensoriel
from Synapse import Synapse

class Aire1:
    def __init__(self, neurone_params, synapse_params):
        """
        Modélise l'aire 1 du cortex somatosensoriel.

        Parameters:
        neurone_params (dict): Paramètres pour les neurones sensoriels.
        synapse_params (dict): Paramètres pour les synapses.
        """
        self.neurones = [NeuroneSensoriel(**neurone_params) for _ in range(50)]
        self.synapses = [Synapse(**synapse_params) for _ in range(50)]

    def traiter_stimulus(self, stimulus):
        """
        Traite un stimulus dans l'aire 1.

        Parameters:
        stimulus (float): Intensité du stimulus reçu.
        Returns:
        list: Réponses des neurones.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones):
            neurone.receive_input(stimulus)
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)
        return reponses
