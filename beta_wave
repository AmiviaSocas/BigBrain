import numpy as np
import matplotlib.pyplot as plt

# Fonction pour générer une onde bêta (en Hz)
def generate_beta_wave(frequency=20.0, duration=2.0, sample_rate=44100):
    t = np.linspace(0, duration, int(sample_rate * duration), False)
    beta_wave = np.sin(2 * np.pi * frequency * t)
    return t, beta_wave

# Paramètres de l'onde bêta
frequency = 20.0  # Fréquence de l'onde bêta (12 - 30 Hz)
duration = 2.0  # Durée en secondes
sample_rate = 44100  # Échantillonnage

# Générer l'onde bêta
t, beta_wave = generate_beta_wave(frequency, duration, sample_rate)

# Afficher l'onde bêta
plt.plot(t, beta_wave, label='Beta Wave (20 Hz)')
plt.title('Beta Wave (20 Hz) - Concentration Active')
plt.xlabel('Time (s)')
plt.ylabel('Amplitude')
plt.grid(True)
plt.legend()
plt.show()
