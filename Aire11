from NeuroneEmotionnel import NeuroneEmotionnel
from Synapse import Synapse
from FeedbackCircuit import FeedbackCircuit

class Aire11:
    def __init__(self, emotional_neuron_params, synapse_params, feedback_params):
        """
        Modélise l'aire 11, impliquée dans la régulation émotionnelle et la prise de décision basée sur les émotions.

        Parameters:
        emotional_neuron_params (dict): Paramètres pour les neurones émotionnels.
        synapse_params (dict): Paramètres pour les synapses.
        feedback_params (dict): Paramètres pour le circuit de feedback.
        """
        self.neurones_emotionnels = [NeuroneEmotionnel(**emotional_neuron_params) for _ in range(150)]
        self.synapses = [Synapse(**synapse_params) for _ in range(150)]
        self.feedback_circuit = FeedbackCircuit(**feedback_params)

    def integrer_signaux_emotionnels(self, input_data):
        """
        Simule l'intégration des signaux émotionnels pour la prise de décision dans l'aire 11.

        Parameters:
        input_data (float): Intensité des signaux émotionnels reçus.
        Returns:
        dict: Réponses des neurones émotionnels après intégration des informations émotionnelles.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones_emotionnels):
            neurone.receive_input(input_data * 1.05)  # Modulation pour régulation émotionnelle
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)

        # Ajustement des réponses avec le circuit de feedback
        self.feedback_circuit.apply_feedback(any(reponses))
       
        return {
            "reponses_neurones_emotionnels": reponses,
            "adjustment_feedback": self.feedback_circuit.apply_feedback(True)
        }

# Simulation de l'aire 11
def simulate_aire11():
    # Paramètres ajustables pour l'aire 11
    emotional_neuron_params = {"threshold": 1.0, "response_strength": 0.8}
    synapse_params = {"weight": 0.55, "neurotransmitter": "noradrenaline"}
    feedback_params = {"reinforcement_sensitivity": 0.4, "decay_factor": 0.1, "max_strength": 1.6}

    aire11 = Aire11(emotional_neuron_params, synapse_params, feedback_params)

    # Simuler des données émotionnelles
    data_inputs = [1.0, 1.2, 0.9, 1.3, 1.1]  # Liste des données émotionnelles pour prise de décision
    for cycle, data in enumerate(data_inputs):
        resultats = aire11.integrer_signaux_emotionnels(data)
        print(f"Cycle {cycle + 1}: Données émotionnelles = {data}, Résultats = {resultats}")

# Exécute la simulation
simulate_aire11()
