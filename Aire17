from NeuroneSensoriel import NeuroneSensoriel
from Synapse import Synapse
from FeedbackCircuit import FeedbackCircuit

class Aire17:
    def __init__(self, visual_neuron_params, synapse_params, feedback_params):
        """
        Modélise l'aire 17 (cortex visuel primaire), impliquée dans le traitement initial des informations visuelles.

        Parameters:
        visual_neuron_params (dict): Paramètres pour les neurones sensoriels visuels.
        synapse_params (dict): Paramètres pour les synapses.
        feedback_params (dict): Paramètres pour le circuit de feedback.
        """
        self.neurones_visuels = [NeuroneSensoriel(**visual_neuron_params) for _ in range(200)]
        self.synapses = [Synapse(**synapse_params) for _ in range(200)]
        self.feedback_circuit = FeedbackCircuit(**feedback_params)

    def traiter_information_visuelle(self, input_data):
        """
        Simule le traitement des informations visuelles dans l'aire 17.

        Parameters:
        input_data (float): Intensité des données visuelles reçues.
        Returns:
        dict: Réponses des neurones visuels après traitement visuel.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones_visuels):
            neurone.receive_input(input_data * 0.95)  # Modulation pour traitement visuel
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)

        # Ajustement des réponses avec le circuit de feedback
        self.feedback_circuit.apply_feedback(any(reponses))
       
        return {
            "reponses_neurones_visuels": reponses,
            "adjustment_feedback": self.feedback_circuit.apply_feedback(True)
        }

# Simulation de l'aire 17
def simulate_aire17():
    # Paramètres ajustables pour l'aire 17
    visual_neuron_params = {"threshold": 1.0, "sensitivity": 0.9}
    synapse_params = {"weight": 0.6, "neurotransmitter": "GABA"}
    feedback_params = {"reinforcement_sensitivity": 0.2, "decay_factor": 0.1, "max_strength": 1.5}

    aire17 = Aire17(visual_neuron_params, synapse_params, feedback_params)

    # Simuler des données visuelles
    data_inputs = [0.6, 1.0, 0.8, 1.2, 0.9]  # Liste des données visuelles
    for cycle, data in enumerate(data_inputs):
        resultats = aire17.traiter_information_visuelle(data)
        print(f"Cycle {cycle + 1}: Données visuelles = {data}, Résultats = {resultats}")

# Exécute la simulation
simulate_aire17()
