from NeuroneMnésique import NeuroneMnésique
from Synapse import Synapse
from FeedbackCircuit import FeedbackCircuit

class Aire23:
    def __init__(self, memory_neuron_params, synapse_params, feedback_params):
        """
        Modélise l'aire 23, impliquée dans la mémoire épisodique et l'intégration émotionnelle.

        Parameters:
        memory_neuron_params (dict): Paramètres pour les neurones de mémoire.
        synapse_params (dict): Paramètres pour les synapses.
        feedback_params (dict): Paramètres pour le circuit de feedback.
        """
        self.neurones_memoire = [NeuroneMnésique(**memory_neuron_params) for _ in range(140)]
        self.synapses = [Synapse(**synapse_params) for _ in range(140)]
        self.feedback_circuit = FeedbackCircuit(**feedback_params)

    def integrer_souvenirs_et_emotions(self, input_data):
        """
        Simule l'intégration des souvenirs épisodiques et des émotions dans l'aire 23.

        Parameters:
        input_data (float): Intensité des données de mémoire et émotion.
        Returns:
        dict: Réponses des neurones de mémoire après traitement.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones_memoire):
            neurone.receive_input(input_data * 1.1)  # Modulation pour mémoire et émotion
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)

        # Ajustement des réponses avec le circuit de feedback
        self.feedback_circuit.apply_feedback(any(reponses))
       
        return {
            "reponses_neurones_memoire": reponses,
            "adjustment_feedback": self.feedback_circuit.apply_feedback(True)
        }

# Simulation de l'aire 23
def simulate_aire23():
    # Paramètres ajustables pour l'aire 23
    memory_neuron_params = {"threshold": 1.0, "sensitivity": 0.9}
    synapse_params = {"weight": 0.6, "neurotransmitter": "serotonine"}
    feedback_params = {"reinforcement_sensitivity": 0.4, "decay_factor": 0.1, "max_strength": 1.5}

    aire23 = Aire23(memory_neuron_params, synapse_params, feedback_params)

    # Simuler des données de mémoire épisodique
    data_inputs = [1.0, 1.2, 0.8, 1.3, 1.1]  # Liste des données pour la mémoire et les émotions
    for cycle, data in enumerate(data_inputs):
        resultats = aire23.integrer_souvenirs_et_emotions(data)
        print(f"Cycle {cycle + 1}: Données de mémoire et émotion = {data}, Résultats = {resultats}")

# Exécute la simulation
simulate_aire23()
