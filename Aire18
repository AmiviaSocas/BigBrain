from NeuroneSensoriel import NeuroneSensoriel
from Synapse import Synapse
from FeedbackCircuit import FeedbackCircuit

class Aire18:
    def __init__(self, visual_neuron_params, synapse_params, feedback_params):
        """
        Modélise l'aire 18 (cortex visuel secondaire), pour un traitement visuel avancé des contours et des mouvements.

        Parameters:
        visual_neuron_params (dict): Paramètres pour les neurones sensoriels visuels.
        synapse_params (dict): Paramètres pour les synapses.
        feedback_params (dict): Paramètres pour le circuit de feedback.
        """
        self.neurones_visuels = [NeuroneSensoriel(**visual_neuron_params) for _ in range(180)]
        self.synapses = [Synapse(**synapse_params) for _ in range(180)]
        self.feedback_circuit = FeedbackCircuit(**feedback_params)

    def affiner_information_visuelle(self, input_data):
        """
        Simule le traitement avancé des informations visuelles dans l'aire 18.

        Parameters:
        input_data (float): Intensité des données visuelles reçues.
        Returns:
        dict: Réponses des neurones visuels après traitement des contours et mouvements.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones_visuels):
            neurone.receive_input(input_data * 1.1)  # Modulation pour affiner le traitement
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)

        # Ajustement des réponses avec le circuit de feedback
        self.feedback_circuit.apply_feedback(any(reponses))
       
        return {
            "reponses_neurones_visuels": reponses,
            "adjustment_feedback": self.feedback_circuit.apply_feedback(True)
        }

# Simulation de l'aire 18
def simulate_aire18():
    # Paramètres ajustables pour l'aire 18
    visual_neuron_params = {"threshold": 1.0, "sensitivity": 0.85}
    synapse_params = {"weight": 0.55, "neurotransmitter": "GABA"}
    feedback_params = {"reinforcement_sensitivity": 0.25, "decay_factor": 0.1, "max_strength": 1.4}

    aire18 = Aire18(visual_neuron_params, synapse_params, feedback_params)

    # Simuler des données visuelles
    data_inputs = [0.9, 1.1, 0.8, 1.3, 1.0]  # Liste des données visuelles complexes
    for cycle, data in enumerate(data_inputs):
        resultats = aire18.affiner_information_visuelle(data)
        print(f"Cycle {cycle + 1}: Données visuelles (complexes) = {data}, Résultats = {resultats}")

# Exécute la simulation
simulate_aire18()
