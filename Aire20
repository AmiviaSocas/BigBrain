from NeuroneSensoriel import NeuroneSensoriel
from Synapse import Synapse
from FeedbackCircuit import FeedbackCircuit

class Aire20:
    def __init__(self, visual_neuron_params, synapse_params, feedback_params):
        """
        Modélise l'aire 20, impliquée dans la perception visuelle complexe et la reconnaissance des objets.

        Parameters:
        visual_neuron_params (dict): Paramètres pour les neurones de perception visuelle.
        synapse_params (dict): Paramètres pour les synapses.
        feedback_params (dict): Paramètres pour le circuit de feedback.
        """
        self.neurones_visuels = [NeuroneSensoriel(**visual_neuron_params) for _ in range(140)]
        self.synapses = [Synapse(**synapse_params) for _ in range(140)]
        self.feedback_circuit = FeedbackCircuit(**feedback_params)

    def traiter_informations_visuelles(self, input_data):
        """
        Simule le traitement des informations visuelles pour la reconnaissance d'objets dans l'aire 20.

        Parameters:
        input_data (float): Intensité des données visuelles reçues.
        Returns:
        dict: Réponses des neurones visuels après traitement des informations visuelles.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones_visuels):
            neurone.receive_input(input_data * 1.05)  # Modulation pour reconnaissance des objets
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)

        # Ajustement des réponses avec le circuit de feedback
        self.feedback_circuit.apply_feedback(any(reponses))
       
        return {
            "reponses_neurones_visuels": reponses,
            "adjustment_feedback": self.feedback_circuit.apply_feedback(True)
        }

# Simulation de l'aire 20
def simulate_aire20():
    # Paramètres ajustables pour l'aire 20
    visual_neuron_params = {"threshold": 1.0, "sensitivity": 0.85}
    synapse_params = {"weight": 0.5, "neurotransmitter": "glutamate"}
    feedback_params = {"reinforcement_sensitivity": 0.3, "decay_factor": 0.1, "max_strength": 1.6}

    aire20 = Aire20(visual_neuron_params, synapse_params, feedback_params)

    # Simuler des données visuelles
    data_inputs = [1.1, 1.3, 0.9, 1.4, 1.0]  # Liste des données pour la perception visuelle
    for cycle, data in enumerate(data_inputs):
        resultats = aire20.traiter_informations_visuelles(data)
        print(f"Cycle {cycle + 1}: Données visuelles = {data}, Résultats = {resultats}")

# Exécute la simulation
simulate_aire20()
