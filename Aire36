from NeuroneMnésique import NeuroneMnésique
from Synapse import Synapse
from FeedbackCircuit import FeedbackCircuit

class Aire36:
    def __init__(self, visual_associative_neuron_params, synapse_params, feedback_params):
        """
        Modélise l'aire 36, impliquée dans la reconnaissance visuelle et la mémoire associative.

        Parameters:
        visual_associative_neuron_params (dict): Paramètres pour les neurones de mémoire visuelle associative.
        synapse_params (dict): Paramètres pour les synapses.
        feedback_params (dict): Paramètres pour le circuit de feedback.
        """
        self.neurones_visuels_associatifs = [NeuroneMnésique(**visual_associative_neuron_params) for _ in range(160)]
        self.synapses = [Synapse(**synapse_params) for _ in range(160)]
        self.feedback_circuit = FeedbackCircuit(**feedback_params)

    def integrer_informations_visuelles_et_associations(self, input_data):
        """
        Simule l'intégration des informations visuelles et associatives dans l'aire 36.

        Parameters:
        input_data (float): Intensité des données visuelles et associatives.
        Returns:
        dict: Réponses des neurones de mémoire visuelle associative après traitement.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones_visuels_associatifs):
            neurone.receive_input(input_data * 1.2)  # Modulation pour la mémoire visuelle associative
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)

        # Ajustement des réponses avec le circuit de feedback
        self.feedback_circuit.apply_feedback(any(reponses))
       
        return {
            "reponses_neurones_visuels_associatifs": reponses,
            "adjustment_feedback": self.feedback_circuit.apply_feedback(True)
        }

# Simulation de l'aire 36
def simulate_aire36():
    # Paramètres ajustables pour l'aire 36
    visual_associative_neuron_params = {"threshold": 1.0, "sensitivity": 0.9}
    synapse_params = {"weight": 0.5, "neurotransmitter": "glutamate"}
    feedback_params = {"reinforcement_sensitivity": 0.4, "decay_factor": 0.1, "max_strength": 1.6}

    aire36 = Aire36(visual_associative_neuron_params, synapse_params, feedback_params)

    # Simuler des données visuelles et associatives
    data_inputs = [1.1, 1.2, 0.9, 1.3, 1.0]  # Liste des données pour la mémoire visuelle associative
    for cycle, data in enumerate(data_inputs):
        resultats = aire36.integrer_informations_visuelles_et_associations(data)
        print(f"Cycle {cycle + 1}: Données visuelles = {data}, Résultats = {resultats}")

# Exécute la simulation
simulate_aire36()

