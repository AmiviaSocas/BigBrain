from NeuroneMnésique import NeuroneMnésique
from Synapse import Synapse
from FeedbackCircuit import FeedbackCircuit

class Aire12:
    def __init__(self, decision_emotional_neuron_params, synapse_params, feedback_params):
        """
        Modélise l'aire 12, impliquée dans la régulation émotionnelle et la prise de décision.

        Parameters:
        decision_emotional_neuron_params (dict): Paramètres pour les neurones de prise de décision émotionnelle.
        synapse_params (dict): Paramètres pour les synapses.
        feedback_params (dict): Paramètres pour le circuit de feedback.
        """
        self.neurones_decision_emotionnelle = [NeuroneMnésique(**decision_emotional_neuron_params) for _ in range(140)]
        self.synapses = [Synapse(**synapse_params) for _ in range(140)]
        self.feedback_circuit = FeedbackCircuit(**feedback_params)

    def integrer_decisions_et_emotions(self, input_data):
        """
        Simule l'intégration des données émotionnelles et décisionnelles dans l'aire 12.

        Parameters:
        input_data (float): Intensité des données émotionnelles et décisionnelles.
        Returns:
        dict: Réponses des neurones après traitement.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones_decision_emotionnelle):
            neurone.receive_input(input_data * 1.25)  # Modulation pour la prise de décision émotionnelle
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)

        # Ajustement des réponses avec le circuit de feedback
        self.feedback_circuit.apply_feedback(any(reponses))
       
        return {
            "reponses_neurones_decision_emotionnelle": reponses,
            "adjustment_feedback": self.feedback_circuit.apply_feedback(True)
        }

# Simulation de l'aire 12
def simulate_aire12():
    # Paramètres ajustables pour l'aire 12
    decision_emotional_neuron_params = {"threshold": 1.0, "sensitivity": 0.9}
    synapse_params = {"weight": 0.6, "neurotransmitter": "glutamate"}
    feedback_params = {"reinforcement_sensitivity": 0.5, "decay_factor": 0.15, "max_strength": 1.7}

    aire12 = Aire12(decision_emotional_neuron_params, synapse_params, feedback_params)

    # Simuler des données émotionnelles et décisionnelles
    data_inputs = [1.0, 1.3, 0.8, 1.2, 1.1]  # Liste des données pour la prise de décision émotionnelle
    for cycle, data in enumerate(data_inputs):
        resultats = aire12.integrer_decisions_et_emotions(data)
        print(f"Cycle {cycle + 1}: Données décisionnelles et émotionnelles = {data}, Résultats = {resultats}")

# Exécute la simulation
simulate_aire12()