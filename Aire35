from NeuroneMnésique import NeuroneMnésique
from Synapse import Synapse
from FeedbackCircuit import FeedbackCircuit

class Aire35:
    def __init__(self, associative_memory_neuron_params, synapse_params, feedback_params):
        """
        Modélise l'aire 35, impliquée dans la mémoire associative et la reconnaissance contextuelle.

        Parameters:
        associative_memory_neuron_params (dict): Paramètres pour les neurones de mémoire associative.
        synapse_params (dict): Paramètres pour les synapses.
        feedback_params (dict): Paramètres pour le circuit de feedback.
        """
        self.neurones_associatifs = [NeuroneMnésique(**associative_memory_neuron_params) for _ in range(145)]
        self.synapses = [Synapse(**synapse_params) for _ in range(145)]
        self.feedback_circuit = FeedbackCircuit(**feedback_params)

    def integrer_informations_associatives(self, input_data):
        """
        Simule l'intégration des informations associatives dans l'aire 35.

        Parameters:
        input_data (float): Intensité des données associatives.
        Returns:
        dict: Réponses des neurones de mémoire associative après traitement.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones_associatifs):
            neurone.receive_input(input_data * 1.2)  # Modulation pour les associations contextuelles
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)

        # Ajustement des réponses avec le circuit de feedback
        self.feedback_circuit.apply_feedback(any(reponses))
       
        return {
            "reponses_neurones_associatifs": reponses,
            "adjustment_feedback": self.feedback_circuit.apply_feedback(True)
        }

# Simulation de l'aire 35
def simulate_aire35():
    # Paramètres ajustables pour l'aire 35
    associative_memory_neuron_params = {"threshold": 1.0, "sensitivity": 0.85}
    synapse_params = {"weight": 0.5, "neurotransmitter": "glutamate"}
    feedback_params = {"reinforcement_sensitivity": 0.4, "decay_factor": 0.1, "max_strength": 1.6}

    aire35 = Aire35(associative_memory_neuron_params, synapse_params, feedback_params)

    # Simuler des données associatives
    data_inputs = [1.1, 1.3, 0.9, 1.2, 1.0]  # Liste des données pour la mémoire associative
    for cycle, data in enumerate(data_inputs):
        resultats = aire35.integrer_informations_associatives(data)
        print(f"Cycle {cycle + 1}: Données associatives = {data}, Résultats = {resultats}")

# Exécute la simulation
simulate_aire35()
