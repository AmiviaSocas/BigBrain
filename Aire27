from NeuroneSensoriel import NeuroneSensoriel
from Synapse import Synapse
from FeedbackCircuit import FeedbackCircuit

class Aire27:
    def __init__(self, olfactory_neuron_params, synapse_params, feedback_params):
        """
        Modélise l'aire 27, impliquée dans la perception olfactive et le traitement des odeurs.

        Parameters:
        olfactory_neuron_params (dict): Paramètres pour les neurones olfactifs.
        synapse_params (dict): Paramètres pour les synapses.
        feedback_params (dict): Paramètres pour le circuit de feedback.
        """
        self.neurones_olfactifs = [NeuroneSensoriel(**olfactory_neuron_params) for _ in range(120)]
        self.synapses = [Synapse(**synapse_params) for _ in range(120)]
        self.feedback_circuit = FeedbackCircuit(**feedback_params)

    def traiter_informations_olfactives(self, input_data):
        """
        Simule le traitement des informations olfactives et la reconnaissance des odeurs dans l'aire 27.

        Parameters:
        input_data (float): Intensité des données olfactives reçues.
        Returns:
        dict: Réponses des neurones olfactifs après traitement des informations olfactives.
        """
        reponses = []
        for i, neurone in enumerate(self.neurones_olfactifs):
            neurone.receive_input(input_data * 1.05)  # Modulation pour la perception des odeurs
            response = neurone.activate()
            self.synapses[i].transmit(response)
            reponses.append(response)

        # Ajustement des réponses avec le circuit de feedback
        self.feedback_circuit.apply_feedback(any(reponses))
       
        return {
            "reponses_neurones_olfactifs": reponses,
            "adjustment_feedback": self.feedback_circuit.apply_feedback(True)
        }

# Simulation de l'aire 27
def simulate_aire27():
    # Paramètres ajustables pour l'aire 27
    olfactory_neuron_params = {"threshold": 1.0, "sensitivity": 0.8}
    synapse_params = {"weight": 0.5, "neurotransmitter": "glutamate"}
    feedback_params = {"reinforcement_sensitivity": 0.35, "decay_factor": 0.1, "max_strength": 1.5}

    aire27 = Aire27(olfactory_neuron_params, synapse_params, feedback_params)

    # Simuler des données olfactives
    data_inputs = [1.0, 1.2, 0.9, 1.3, 1.1]  # Liste des données pour la perception olfactive
    for cycle, data in enumerate(data_inputs):
        resultats = aire27.traiter_informations_olfactives(data)
        print(f"Cycle {cycle + 1}: Données olfactives = {data}, Résultats = {resultats}")

# Exécute la simulation
simulate_aire27()

